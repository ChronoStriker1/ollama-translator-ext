{
  "manifest_version": 3,
  "name": "Ollama Inline Translator",
  "version": "1.0.1",
  "description": "Translate non-English text inline using Ollama (via background fetch).",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://localhost:*/*",
    "https://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html" 
}